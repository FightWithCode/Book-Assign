doctype html
html(lang='en')
  head
    title Login to access all the books
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='style.css')
  body
    section.login-signup-page.d-flex.justify-content-center.align-items-center
      .container.mt-3.card
        h3 Login to access all the books
        form#login-form.login-form
          .mb-3.mt-3
            label(for='login-email') Email:
            input#login-email.form-control(type='email', placeholder='Enter email', name='login-email')
          .mb-3
            label(for='login-pwd') Password:
            input#login-pwd.form-control(type='password', placeholder='Enter password', name='login-pwd')
          .mb-3
            span
              | Do not Have an account ?
              a(href='/signup') click Here to signup
          button.btn.btn-primary(type='submit') Submit
  script(src='/js/bundle.js')