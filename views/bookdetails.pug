doctype html
html(lang='en')
  head
    title Login to access all the books
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='/style.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
  body
    section.main-page.d-flex.justify-content-center.align-items-center
      .container.mt-3
        .card(style='width: 400px')
          img.card-img-top(src=`${book.imageUrl}`, alt='Card image', style='width: 100%')
          .card-body
            h4.card-title= book.name
            p.card-text
                | The Book was written by &nbsp;
                b= book.author
            p.card-text 
                | This book contain total &nbsp;
                b= book.pages 
                | &nbsp; Number of pages
            p.card-text
              | MRP is &nbsp;
              b= `${book.price} Rupees`
            a.btn.btn-primary(href='#') Details