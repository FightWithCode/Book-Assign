doctype html
html(lang='en')
  head
    title All Books
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='style.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
  body
    section.main-page.d-flex.justify-content-center.align-items-center
      .container.mt-3
        .row
          each book in books
            .col-12.col-sm-12.col-md-6.col-lg-4.col-xl-4.mb-1.mt-1.mb-1.mt-1
              .card(style='width: 400px')
                img.card-img-top(src=`${book.imageUrl}`, alt='Card image', style='width: 100%')
                .card-body
                  h4.card-title= book.name
                  a.btn.btn-primary(href=`/bookdetails/${book.slug}`) Details            
